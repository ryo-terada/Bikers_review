<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_user_image(100,100) %>
  <p>自己紹介</p>
  <%= @user.introduction %>
    <!-- <p><%= link_to "プロフィール編集", edit_admin_user_path(@user) %></p> !-->
    <%= form_with model:@user, url: admin_user_path(@user) do |f| %>
  <p>会員ステータス</p>
		<%= f.radio_button :is_deleted, false %><%= f.label :is_deleted, "有効", class: "text-active" %>
		<%= f.radio_button :is_deleted, true %><%= f.label :is_deleted, "退会", class: "text-invalid" %>
		<%= f.submit "更新", class: "btn btn-primary" %>
		<% end %>
</div>


<% @bikes.each do |bike| %>
<%= image_tag bike.get_bike_image(200,200) %>
  <p>メーカー：<%= bike.manufacturer %></p>
  <p>車種：<%= bike.bike_name %></p>
  <p>第一印象：<%= bike.first_impression %>
  <p>感想：<%= bike.body %></p>
  <p>投稿日：<%= bike.created_at.strftime('%Y/%m/%d') %></p>
  <%= link_to "レビュー詳細", admin_bike_path(bike.id) %>
<% end %>
<%= paginate @bikes %>