<h1>投稿一覧</h1>

<table class="table table-hover table-inverse">
  <thead>
    <th>投稿日</th>
    <th>ユーザー</th>
    <th>画像</th>
    <th>メーカー</th>
    <th>車種</th>
    <th>第一印象</th>
  </thead>
  <% @bikes.each do |bike| %>
  <tbody>
    <td><%= bike.created_at.strftime('%Y/%m/%d') %></td>
    <% @users.each do |user| %>
    <td><%= user.name %></td>
    <% end %>
    <td><%= image_tag bike.get_bike_image(100,100) %></td>
    <td><%= bike.manufacturer %></td>
    <td><%= link_to bike.bike_name, bike_path(bike.id) %></td>
    <td><%= bike.first_impression %></td>
  </tbody>
  <% end %>
</table>