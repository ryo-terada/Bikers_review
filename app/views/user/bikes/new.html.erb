<h1>新規投稿</h1>

<% if @bike.errors.any? %>
  <%= @bike.errors.count %>件のエラーが発生しました
  <ul>
    <% @bike.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @bike, url: '/bikes', method: :post do |f| %>
  <h4>画像</h4>
  <%= f.file_field :bike_image, accept: "image/*" %>
  
  <h4>メーカー名</h4>
  <%= f.text_field :manufacturer %>
	
  <h4>車種名</h4>
  <%= f.text_field :bike_name %>
  
  <h4>第一印象（一言で）</h4>
  <%= f.text_area :first_impression %>
  
  <h4>感想</h4>
  <%= f.text_area :body %>
	
  <%= f.submit '投稿' %>
<% end %>