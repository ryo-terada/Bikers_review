<div>
  <h3><%= @user.name %>さんのレビュー一覧</h3>
  <br>
  <%= image_tag @user.get_user_image(150,150) %>
  <h5>自己紹介:<%= @user.introduction %></h5>
  <br>
  <% if @user == current_user %>
    <h5><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-info" %></h5>
  <% end %>
</div>

<table class="table table-hover">
  <thead>
    <th>投稿日</th>
    <th>画像</th>
    <th>メーカー</th>
    <th>車種</th>
    <th>第一印象</th>
    <th>いいね</th>
  </thead>
  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= image_tag bike.get_bike_image(150,150) %></td>
        <td><%= bike.manufacturer %></td>
        <td><%= link_to bike.bike_name, bike_path(bike.id) %></td>
        <td><%= bike.first_impression %></td>
        <td>♡<%= bike.favorites.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @bikes %>
